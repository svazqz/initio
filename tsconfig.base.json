{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@next-base/lib-auth": ["lib/auth/src/index.ts"],
      "@next-base/lib-data/api": ["lib/data/src/api/index.ts"],
      "@next-base/lib-data/consumers": ["lib/data/src/consumers/index.ts"],
      "@next-base/lib-data/models": ["lib/data/src/models/index.ts"],
      "@next-base/lib-data/schemas": ["lib/data/src/schemas/index.ts"],
      "@next-base/lib-data/validation-schemas": [
        "lib/data/src/validation-schemas/index.ts"
      ],
      "@next-base/lib-data": ["lib/data/src/index.ts"],
      "@next-base/lib-ui/style.css": ["./dist/lib/ui/style.css"],
      "@next-base/lib-ui": ["./dist/lib/ui"],
      "@next-base/lib-ui/components": ["lib/ui/src/components"],
      "@next-base/lib-ui/components/*": ["lib/ui/src/components/*"],
      "@next-base/lib-ui/utils": ["lib/ui/src/utils.ts"],
      "@services": ["apps/next-base/services/index.ts"]
    },
    "types": ["react/next"]
  },
  "exclude": ["node_modules", "tmp"]
}
